        // Stažení obrázku obálky
        function downloadImage() {
            const img = document.getElementById('enlargedImage');
            const link = document.createElement('a');
            link.href = img.src;
            link.download = 'obalka_@(Model.Title.Replace(" ", "_")).jpg';
